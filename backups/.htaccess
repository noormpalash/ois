# Deny direct access to backup files
Order Deny,Allow
Deny from all

# Prevent directory listing
Options -Indexes

# Prevent execution of PHP files
<Files "*.php">
    Order Deny,Allow
    Deny from all
</Files>

# Only allow access to .sql files through the API
<Files "*.sql">
    Order Deny,Allow
    Deny from all
</Files>
